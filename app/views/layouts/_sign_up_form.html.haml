.signUp__items
    .signUp__heading
        %h2 新規登録
        
    .signUp__form
        %form#new_user.new_user{"accept-charset" => "UTF-8", :action => "/users", :method => "post"}
            %input{:name => "utf8", :type => "hidden", :value => "✓"}/
            %input{:name => "authenticity_token", :type => "hidden", :value => "W4VZp7SrPnlfFvqgVj24Wh0pZYeeEqBxHHvt9USnF9TNOO3OA4qKxC8iErWae0IzLzM64sk0Nw9qEvO8zEZ9Hg"}/
            .signUp__form__name
                %label{:for => "user_ニックネーム"} ニックネーム
            .signUp__form__textBox
                %input#user_nick_name{:autocomplete => "nick_name", :autofocus => "autofocus", :name => "user[nick_name]", :type => "text"}/
            .signUp__form__name
                %label{:for => "user_メールアドレス"} メールアドレス
            .signUp__form__textBox
                %input#user_email{:autocomplete => "email", :autofocus => "autofocus", :name => "user[email]", :type => "email", :value => ""}/
            .signUp__form__name
                %label{:for => "user_パスワード"} パスワード
            .signUp__form__textBox--input
                %input#user_password{:autocomplete => "new-password", :name => "user[password]", :type => "password"}/
                %em (6 文字以上で入力して下さい)
            .signUp__form__textBox
                %input#user_password_confirmation{:autocomplete => "new-password", :name => "user[password_confirmation]", :type => "password"}/
                %em (確認のため再度入力して下さい)
            .signUp__form__actions
                %input.signUp__form__btn{"data-disable-with" => "Sign up", :name => "commit", :type => "submit", :value => "登録"}/
        
