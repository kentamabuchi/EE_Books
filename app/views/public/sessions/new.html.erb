<div class="USPage">
  <div class="USPage__container">
    <div class="USPage__content">
      <div class="USPage__heading">
        <h2>ログイン</h2>
      </div>
      <div class="USPage__form">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="USPage__form__name">
            <%= f.label :メールアドレス %>
          </div>
          <div class="USPage__form__TextBox">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="USPage__form__name">
            <%= f.label :パスワード %>
          </div>
          <div class="USPage__form__TextBox">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="USPage__form__check">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          
          <div class="USPage__actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

