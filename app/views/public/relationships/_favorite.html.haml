- if Relationship.find_by(user_id: current_user.id, follow_id: user.id)
  = link_to "フォロー中", user_relationships_path(user), method: :delete, remote: true, class: "UShow__favorite"
- else
  = link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "UShow__favorite--none"
