.contentsRecommend 
    .contentsRecommend__heading
        %h2.contentsRecommend__headerText
            = headingText
    
    .books__recommend
        - if follow_books.length > 4
            %ul.books__recommendSlider
            
                %i.fas.fa-2x.fa-chevron-circle-left.books__recommend__prevBtn#prevBtn
                
                
                .books__recommendSliderItems
                    - 5.times do |n|
                    
                        -if n == 0 && follow_books[n].present?
                            %li.books__recommendBook.slideItem.contents__left.display
                                = link_to book_path(follow_books[n]), class:"books__recommendBookLink" do
                                    .books__recommendBookItems
                                        = attachment_image_tag follow_books[n], :image, fallback: "no_image_book.jpeg", size: "300x300", class: "books__recommendBookImage" 
                                        .books__recommendBookDataItems
                                            .books__recomendBookData
                                                = follow_books[n].name
                                            .books__recomendBookData
                                                = follow_books[n].writer
                                            .books__recomendBookData
                                                = follow_books[n].classification.name
                                            .books__recomendBookData
                                                = follow_books[n].genre.name
                                                
                        - elsif n == 1 && follow_books[n].present?
                            %li.books__recommendBook.slideItem.contents__center.display--center
                                = link_to book_path(follow_books[n]), class:"books__recommendBookLink" do
                                    .books__recommendBookItems
                                        = attachment_image_tag follow_books[n], :image, fallback: "no_image_book.jpeg", size: "300x300", class: "books__recommendBookImage" 
                                        .books__recommendBookDataItems
                                            .books__recomendBookData
                                                = follow_books[n].name
                                            .books__recomendBookData
                                                = follow_books[n].writer
                                            .books__recomendBookData
                                                = follow_books[n].classification.name
                                            .books__recomendBookData
                                                = follow_books[n].genre.name
                                                
                        - elsif n == 2 && follow_books[n].present?
                            %li.books__recommendBook.slideItem.contents__right.display
                                = link_to book_path(follow_books[n]), class:"books__recommendBookLink" do
                                    .books__recommendBookItems
                                        = attachment_image_tag follow_books[n], :image, fallback: "no_image_book.jpeg", size: "300x300", class: "books__recommendBookImage" 
                                        .books__recommendBookDataItems
                                            .books__recomendBookData
                                                = follow_books[n].name
                                            .books__recomendBookData
                                                = follow_books[n].writer
                                            .books__recomendBookData
                                                = follow_books[n].classification.name
                                            .books__recomendBookData
                                                = follow_books[n].genre.name
                                                
                        - elsif n == 3 && follow_books[n].present?
                            %li.books__recommendBook.slideItem.contents__rightOver
                                = link_to book_path(follow_books[n]), class:"books__recommendBookLink" do
                                    .books__recommendBookItems
                                        = attachment_image_tag follow_books[n], :image, fallback: "no_image_book.jpeg", size: "300x300", class: "books__recommendBookImage" 
                                        .books__recommendBookDataItems
                                            .books__recomendBookData
                                                = follow_books[n].name
                                            .books__recomendBookData
                                                = follow_books[n].writer
                                            .books__recomendBookData
                                                = follow_books[n].classification.name
                                            .books__recomendBookData
                                                = follow_books[n].genre.name
                                                
                        - elsif n == 4 && follow_books[n].present?
                            %li.books__recommendBook.slideItem.contents__leftOver
                                = link_to book_path(follow_books[n]), class:"books__recommendBookLink" do
                                    .books__recommendBookItems
                                        = attachment_image_tag follow_books[n], :image, fallback: "no_image_book.jpeg", size: "300x300", class: "books__recommendBookImage" 
                                        .books__recommendBookDataItems
                                            .books__recomendBookData
                                                = follow_books[n].name
                                            .books__recomendBookData
                                                = follow_books[n].writer
                                            .books__recomendBookData
                                                = follow_books[n].classification.name
                                            .books__recomendBookData
                                                = follow_books[n].genre.name
                                                
                     
                %i.fas.fa-2x.fa-chevron-circle-right.books__recommend__nextBtn#nextBtn
        
            = javascript_include_tag "slide"
        
        - elsif 1 <= @follow_books.length && @follow_books.length <= 4
            .contentsRecommend__contents
                %ul.contentsRecommend__list
                    
                    - 4.times do |n|
                        -if @follow_books[n].present?
                            %li.contentsRecommend__book
                                = link_to book_path(@follow_books[n]), class:"contentsRecommend__bookLink" do
                                    .contentsRecommend__bookItems
                                        = attachment_image_tag @follow_books[n], :image, fallback: "no_image_book.jpeg", size: "150x150", class: "contentsRecommend__bookImage" 
                                        .contentsRecommend__datas
                                            .contentsRecommend__bookData
                                                = @follow_books[n].name
                                            .contentsRecommend__bookData
                                                = @follow_books[n].writer
                                            .contentsRecommend__bookData
                                                = @follow_books[n].classification.name
                                            .contentsRecommend__bookData
                                                = @follow_books[n].genre.name
    
