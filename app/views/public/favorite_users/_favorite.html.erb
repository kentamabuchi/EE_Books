<% if FavoriteUser.find_by(user_id: current_user.id, favorite_user_id: user.id) %>
    <%= link_to "お気に入り", user_favorite_users_path(user), method: :delete, remote: true, class: "UShow__favorite" %>
<% else %>
    <%= link_to "お気に入り", user_favorite_users_path(user), method: :post, remote: true, class: "UShow__favorite--none" %>
<% end %>
