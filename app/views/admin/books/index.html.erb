<div class="BookPage">
    <div class="BookPage__container">
        <section class="BIndex">
            
            <div class="BIndex__heading">
                <h2>書籍一覧</h2>
            </div>
            
            <div class="BIndex__action__new">
                <%= link_to new_admin_book_path, class: "d-flex flex-row-reverse pb-3" do %>
                <i class="far fa-plus-square fa-2x"></i>
            <% end %>
            </div>
            
            <div class="BIndex__contents">
            <table class="BIndex__table">
                <tr>
                    <th class="BIndex__thread">タイトル</th>
                    <th class="BIndex__thread">作者</th>
                    <th class="BIndex__thread--category">分類</th>
                    <th class="BIndex__thread--category">ジャンル</th>
                    <th class="BIndex__thread--status">編集ステータス</th>
                    <th class="BIndex__thread--status">書籍ステータス</th>
                </tr>
                
                 <% @books.each do |book|%>
                 <tr>
                     <td class="BIndex__date"><%= book.name %></td>
                     <td class="BIndex__date"><%= book.writer %></td>
                     <td class="BIndex__date"><%= book.classification.name %></td>
                     <td class="BIndex__date"><%= book.genre.name %></td>
                     <td class="BIndex__date"><%= book.edit_status %></td>
                     <td class="BIndex__date"><%= book.is_active %></td>
                     <td class="BIndex__date"><%= link_to "詳細", admin_book_path(book), class: "BIndex__btn--show" %></td>
                     <td class="BIndex__date"><%= link_to "削除", admin_book_path(book), method: :delete, class: "BIndex__btn--delete" %></td>
                 </tr>
                 <% end %>
            </table>
        </section>

    </div>
</div>

