<div class="ABookPage">
    <div class="ABookPage__container">
        <section class="ABIndex">
            
            <div class="ABIndex__heading">
                <h2>書籍一覧</h2>
            </div>
            
            <div class="ABIndex__action__new">
                <%= link_to new_admin_book_path, class: "d-flex flex-row-reverse pb-3" do %>
                <i class="far fa-plus-square fa-2x"></i>
            <% end %>
            </div>
            
            <div class="ABIndex__contents">
            <table class="ABIndex__table">
                <tr>
                    <th class="ABIndex__thread">タイトル</th>
                    <th class="ABIndex__thread">作者</th>
                    <th class="ABIndex__thread--category">分類</th>
                    <th class="ABIndex__thread--category">ジャンル</th>
                    <th class="ABIndex__thread--status">編集ステータス</th>
                    <th class="ABIndex__thread--status">書籍ステータス</th>
                </tr>
                
                 <% @books.each do |book|%>
                 <tr>
                     <td class="ABIndex__date"><%= book.name %></td>
                     <td class="ABIndex__date"><%= book.writer %></td>
                     <td class="ABIndex__date"><%= book.classification.name %></td>
                     <td class="ABIndex__date"><%= book.genre.name %></td>
                     <td class="ABIndex__date"><%= book.edit_status %></td>
                     <td class="ABIndex__date"><%= book.is_active %></td>
                     <td class="ABIndex__date"><%= link_to "詳細", admin_book_path(book), class: "ABIndex__btn--show" %></td>
                     <td class="ABIndex__date"><%= link_to "削除", admin_book_path(book), method: :delete, class: "ABIndex__btn--delete" %></td>
                 </tr>
                 <% end %>
            </table>
        </section>

    </div>
</div>

