.AGIndex
  .AGIndex__container
    .AGIndex__content
      %section.AGIndex__scection
        .AGIndex__section__heading
          %h2 ジャンル追加
        .AGIndex__form
          = form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f|
            %table.AGIndex__form__item
              %tr
                %th.AGIndex__text ジャンル名：
                %td= f.text_field :name
                %td
                  = f.submit "追加", class: "AGIndex__btn"
                  　
      %section.AGIndex__section
        .AGIndex__section__heading
          %h2 ジャンル一覧
        .AGIndex__index
          %table.AGIndex__index__item
            - @genres.each do |genre|
              %tr
                %td.AGIndex__cell
                  %span.AGIndex__text= genre.name
                = form_with model: genre, url: admin_genre_path(genre), method: :patch, local: true do |f|
                  %td
                    = f.text_field :name
                  %td
                    = f.submit "変更", class: "AGIndex__btn--change"
                %td
                  = link_to "削除", admin_genre_path(genre), method: :delete, class: "AGIndex__btn--delete"
        .AGIndex__paginate
          = paginate @genres
