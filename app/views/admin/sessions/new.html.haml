.ASPage
  .ASPage__container
    .ASPage__content
      .ASPage__heading
        %h2 ログイン
      .ASPage__form
        = form_with model: @admin, url: admin_session_path, local: true do |f|
          .ASPage__form__name
            = f.label :メールアドレス
          .ASPage__form__TextBox
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .ASPage__form__name
            = f.label :パスワード
            %br/
          .ASPage__form__TextBox
            = f.password_field :password, autocomplete: "current-password"
          - if devise_mapping.rememberable?
            .ASPage__form__check
              = f.check_box :remember_me
              = f.label :remember_me
          .ASPage__actions
            = f.submit "Log in"
